# Puerto del servidor
PORT=5000

# URI de MongoDB - Reemplazar con tu propia URI
MONGODB_URI=mongodb://localhost:27017/chatapp

# Claves JWT para autenticación y tokens de refresco
JWT_SECRET_KEY=tu_clave_secreta_aqui
JWT_REFRESH_KEY=tu_clave_refresco_aqui

# Entorno (development, production, test)
NODE_ENV=development

# Orígenes permitidos para CORS (separados por comas)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# Configuración de seguridad
# El límite de rate limiter (peticiones por ventana de tiempo)
RATE_LIMIT=100
# Duración de la ventana de rate limiting en ms (15 minutos)
RATE_LIMIT_WINDOW=900000

# Configuración de caducidad de tokens (en formato compatible con ms)
ACCESS_TOKEN_EXPIRY=24h
REFRESH_TOKEN_EXPIRY=30d

# Opcional: URL de servicio de almacenamiento de archivos (para imágenes de perfil)
STORAGE_URL=

# Opcional: Configuración de logging
LOG_LEVEL=info
